<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/profile_section"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Pagi"
            android:id="@+id/tv_selamat_pagi"
            android:textStyle="normal"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fahri Maulana"
            android:layout_below="@id/tv_selamat_pagi"
            android:id="@+id/tv_nama"
            android:textStyle="bold"
            android:textColor="#252525"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/inbox"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/section_penawaran"
        android:layout_below="@id/profile_section"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="359dp"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/tawar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_below="@id/section_penawaran"
        android:id="@+id/section_kategori">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minuman Kami"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:id="@+id/tv_minuman"
            android:textColor="#252525"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Semua"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:textFontWeight="@integer/material_motion_duration_short_1"
            android:id="@+id/tv_lihat_semua"
            android:textColor="#A47C48"
            android:textSize="16sp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_below="@id/section_kategori"
        android:paddingTop="20dp">

        <Button
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/btn1"
            android:text="Kopi Panas"
            android:textSize="10sp"
            android:textColor="#252525"
            android:background="@android:color/transparent"
            android:foreground="@drawable/button_outline"/>

        <Button
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:textSize="10sp"
            android:drawableLeft="@drawable/btn2"
            android:text="Kopi Dingin"
            android:textColor="#252525"
            android:background="@android:color/transparent"
            android:foreground="@drawable/button_outline"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:id="@id/section_kategori2"
        android:layout_below="@id/section_kategori"
        android:paddingTop="100dp">

        <Button
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:textSize="10sp"
            android:drawableLeft="@drawable/btn3"
            android:text="Chocolate"
            android:textColor="#252525"
            android:background="@android:color/transparent"
            android:foreground="@drawable/button_outline"/>

        <Button
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:textSize="10sp"
            android:drawableLeft="@drawable/btn4"
            android:text="Best Seller"
            android:textColor="#252525"
            android:background="@android:color/transparent"
            android:foreground="@drawable/button_outline"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_below="@id/section_kategori2"
        android:id="@+id/section_kategori3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makanan Kami"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:id="@+id/tv_makanan_kami"
            android:textColor="#252525"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Semua"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:textFontWeight="@integer/material_motion_duration_short_1"
            android:id="@+id/tv_lihat_semua2"
            android:textColor="#A47C48"
            android:textSize="16sp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:id="@id/section_kategori4"
        android:layout_below="@id/section_kategori3"
        android:paddingTop="20dp">

        <Button
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/btn5"
            android:text="Roti dan Kue"
            android:textSize="10sp"
            android:textColor="#252525"
            android:background="@android:color/transparent"
            android:foreground="@drawable/button_outline"/>

        <Button
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/btn6"
            android:text="Snack"
            android:textSize="10sp"
            android:textColor="#252525"
            android:background="@android:color/transparent"
            android:layout_marginLeft="50dp"
            android:foreground="@drawable/button_outline"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:id="@id/section_kategori5"
        android:layout_below="@id/section_kategori4"
        android:paddingTop="20dp">

        <Button
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/btn7"
            android:text="Fast Food"
            android:textSize="10sp"
            android:textColor="#252525"
            android:background="@android:color/transparent"
            android:foreground="@drawable/button_outline"/>

        <Button
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/btn4"
            android:text="Best Seller"
            android:textSize="10sp"
            android:textColor="@color/text_color"
            android:background="@android:color/transparent"
            android:layout_marginLeft="50dp"
            android:foreground="@drawable/button_outline"/>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/section_kategori5"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:menu="@menu/menu_bottom" />
</RelativeLayout>